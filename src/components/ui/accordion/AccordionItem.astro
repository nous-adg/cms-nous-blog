---
import type { AccordionItem } from '../../../types/accordion';
import AccordionHeader from './AccordionHeader.astro';
import AccordionContent from './AccordionContent.astro';

interface Props {
    id: string;
    item: AccordionItem;
    index: number;
}

const { id, item, index } = Astro.props;
---

<div class="accordion-item border-b border-secondary-light/20 last:border-b-0 transition-all duration-400">
    <AccordionHeader 
        id={item.id} 
        title={item.title} 
        description={item.description} 
        index={index} 
    />
    <AccordionContent 
        description={item.description} 
        services={item.services} 
        index={index} 
    />
</div>
