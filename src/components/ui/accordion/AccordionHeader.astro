---
import ChevronIcon from '../icons/ChevronIcon.astro';

interface Props {
    id: string;
    title: string;
    description: string;
    index: number;
}

const { id, title, description, index } = Astro.props;
---

<button 
    class="accordion-header w-full grid grid-cols-2 md:grid-cols-3 items-center md:items-center gap-3 md:gap-6 py-4 md:py-6 text-left hover:opacity-90 transition-all duration-400 hover:cursor-pointer"
    id={id}
    aria-expanded="false"
    aria-controls={`accordion-content-${index}`}
    data-accordion-trigger
>
    <div class="p-4 md:p-8 order-1 md:order-1">
        <h3 class="text-lg md:text-xl font-bold text-primary">
            {title}
        </h3>
    </div>
    
    <div class="flex justify-end md:justify-center px-4 md:px-0 order-2 md:order-3 items-center">
        <div class="accordion-icon flex-shrink-0 w-8 h-8 rounded-full border-2 border-secondary-light flex items-center justify-center transition-transform duration-300">
            <ChevronIcon />
        </div>
    </div>
    
    <p class="text-sm md:text-base font-light text-primary col-span-2 md:col-span-1 px-4 md:px-0 order-3 md:order-2">
        {description}
    </p>
</button>
