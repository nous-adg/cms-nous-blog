---
import CheckIcon from '../icons/CheckIcon.astro';

interface Props {
    services: string[];
}

const { services } = Astro.props;
---

<div class="services-section">
    <h4 class="text-secondary font-bold text-lg mb-4">
        Servicios
    </h4>
    
    <div class="services-grid grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
        {services.map((service) => (
            <div class="service-item flex items-start gap-2">
                <CheckIcon />
                <span class="text-secondary text-sm leading-relaxed">
                    {service}
                </span>
            </div>
        ))}
    </div>
</div>
