---
interface Props {
    title: string
    links: Array<{ text: string; href: string }>
    className?: string
}

const { title, links, className = '' } = Astro.props
---

<div class={className}>
    <h4 class="font-bold text-lg mb-4">{title}</h4>
    <ul class="space-y-2 text-sm">
        {links.map((link) => (
            <li>
                <a href={link.href} class="hover:underline">
                    {link.text}
                </a>
            </li>
        ))}
    </ul>
</div>
